/* Properties to verify working of closing operations. 
If a node is in CLOSE_SHUTDOWN_INITIATED or VALIDATE_SHUTDOWN, then we eventually 
reach FAIL_CHANNEL or CLOSE_FINISHED
LTL: (CLOSE_SHUTDOWN_INITIATED or VALIDATE_SHUTDOWN) |= F(FAIL_CHANNEL or CLOSE_FINISHED). */

ltl closing1 {
    always (
        (state[0] == LOSE_SHUTDOWN_INITIATED || VALIDATE_SHUTDOWN)
        implies (
            eventually(
                    (state[0] == FAIL_CHANNEL || CLOSE_FINISHED)
            )
        )
    )
}
